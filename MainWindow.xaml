<Window x:Class="Workers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workers"
        mc:Ignorable="d"
        Title="Сотрудники" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Добавить сотрудника" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="ФИО"/>
            <TextBox x:Name="txtFullName" Margin="0,0,0,10"/>

            <TextBlock Text="Дата рождения (дд.мм.гггг)"/>
            <TextBox x:Name="txtBirthDate" Margin="0,0,0,10"/>

            <TextBlock Text="Возраст"/>
            <TextBox x:Name="txtAge" Margin="0,0,0,10"/>

            <TextBlock Text="ИНН (12 цифр)"/>
            <TextBox x:Name="txtINN" Margin="0,0,0,10"/>

            <TextBlock Text="Паспорт (1234 567890)"/>
            <TextBox x:Name="txtPassport" Margin="0,0,0,10"/>

            <TextBlock Text="Телефон"/>
            <TextBox x:Name="txtPhone" Margin="0,0,0,10"/>

            <TextBlock Text="Пол"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <RadioButton x:Name="rbMale" Content="Мужской" GroupName="Gender" Margin="0,0,10,0"/>
                <RadioButton x:Name="rbFemale" Content="Женский" GroupName="Gender"/>
            </StackPanel>

            <Button x:Name="btnAdd" Content="Добавить" Click="BtnAdd_Click" Height="30" Margin="0,0,0,5"/>
            <Button x:Name="btnClear" Content="Очистить" Click="BtnClear_Click" Height="30"/>

            <TextBlock x:Name="txtError" Foreground="Red" Margin="0,10" TextWrapping="Wrap"/>
        </StackPanel>

        <StackPanel Grid.Column="2">
            <TextBlock x:Name="txtCount" FontWeight="Bold" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgWorkers" AutoGenerateColumns="False" Height="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="120"/>
                    <DataGridTextColumn Header="Дата рожд." Binding="{Binding BirthDate}" Width="80"/>
                    <DataGridTextColumn Header="Возраст" Binding="{Binding Age}" Width="60"/>
                    <DataGridTextColumn Header="ИНН" Binding="{Binding INN}" Width="100"/>
                    <DataGridTextColumn Header="Паспорт" Binding="{Binding Passport}" Width="80"/>
                    <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="110"/>
                    <DataGridTextColumn Header="Пол" Binding="{Binding Gender}" Width="60"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button x:Name="btnDelete" Content="Удалить" Click="BtnDelete_Click" Width="80" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>